<div class="row">
    <div class="col-md-12">
        <div class="card bg-secondary mb-4">
            <div class="card-header">
                <h2><i class="fas fa-brain"></i>
                    <%= title %>
                </h2>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <strong>Instructions:</strong> Use the interactive notebook below to run Python code directly in
                    your browser.
                </div>

                <!-- JupyterLite Iframe -->
                <div class="ratio" style="--bs-aspect-ratio: 100vh; height: 800px;">
                    <iframe src="/jupyter/lab/index.html?path=<%= notebookFile %>" title="JupyterLite"
                        style="width: 100%; height: 100%; border: none;"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card bg-dark text-light">
            <div class="card-header">
                <h3>Lab Manual</h3>
            </div>
            <div class="card-body">
                <div class="manual-content">
                    <%- manual %>
                </div>
            </div>
        </div>
    </div>
</div>